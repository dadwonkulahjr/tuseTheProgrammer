@page "{id}"
@model tuseTheProgrammer.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
}


<div class="alert alert-info alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Success!</strong> Employee details...
</div>
<hr />
<h1 class="text-info">
    Details
</h1>
<hr />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Department Id</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.Employee.Name
            </td>
            <td>
                @Model.Employee.Email
            </td>
            <td>
                @Model.Employee.Salary
            </td>
            <td>
                @Model.Gender.Sex
            </td>
            <td>
                @Model.Department.Dept
            </td>
            <td>
                @Model.Department.Id.ToString()
            </td>
        </tr>
    </tbody>
</table>
<a asp-page="Index" class="btn btn-outline-secondary">
    Back
</a>


