@page "{id}"
@model tuseTheProgrammer.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Existing Employee";
}

<div class="alert alert-info alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Success!</strong> Edit employee information
</div>
<hr />
<h1 class="text-info">
    Edit
</h1>
<hr />
<form method="post">
    <input hidden="hidden" asp-for="@Model.Employee.Id" />
    <div class="row form-group">
        <label asp-for="@Model.Employee.Name" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Name" class="form-control" />
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="@Model.Employee.Email" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Email" class="form-control" />
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="@Model.Employee.Salary" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Salary" class="form-control" />
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="@Model.Employee.Department.Dept" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Employee.Department.Dept" class="custom-select-sm form-control" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Select department</option>
            </select>
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="@Model.Employee.Gender.Sex" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Employee.Gender.Sex" class="custom-select-sm form-control" asp-items="Html.GetEnumSelectList<Sex>()">
                <option value="">Select gender</option>
            </select>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-10">
            <button class="btn btn-outline-success" type="submit">Update</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
</form>
