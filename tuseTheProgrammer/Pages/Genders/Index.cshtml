@page
@model tuseTheProgrammer.Pages.Genders.IndexModel
@{
    ViewData["Title"] = "List Of Gender";
}


@if (!Model.Gender.Any())
{

    <div class="alert alert-info alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Success!</strong> No record is yet in the database!
    </div>

}
else
{

    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Success!</strong> Available gender...
    </div>
    <div class="row">
        <div class="ml-auto">
            <a asp-page="Create" class="btn btn-outline-primary">
                Add Gender
            </a>
        </div>
    </div>
    <hr />
    <h1 class="text-info">Genders</h1>
   <hr />
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sex</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gender in Model.Gender)
            {

                <tr>
                    <td>
                        @gender.Id.ToString()
                    </td>
                    <td>
                        @gender.Sex
                    </td>
                    <td>
                        <a class="btn btn-outline-secondary mt-2" asp-route-id="@gender.Id" asp-page="/Genders/Details">Details</a>
                        <a asp-route-id="@gender.Id" class="btn btn-outline-primary mt-2" asp-page="/Genders/Edit">Edit</a>
                        <a class="btn btn-danger mt-2 text-white" asp-route-id="@gender.Id" asp-page="/Genders/Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}





