@page
@model tuseTheProgrammer.Pages.Genders.CreateModel
@{
    ViewData["Title"] = "Create New Gender";
}


<div class="alert alert-info alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Success!</strong> Add your gender information
</div>

<form method="post">
    <div class="row form-group">
        <label asp-for="@Model.Gender.Sex" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Gender.Sex" class="custom-select-sm form-control" asp-items="Html.GetEnumSelectList<Sex>()">
                <option value="">Select gender</option>
            </select>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-10">
            <button class="btn btn-outline-success" type="submit">Add</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
</form>




