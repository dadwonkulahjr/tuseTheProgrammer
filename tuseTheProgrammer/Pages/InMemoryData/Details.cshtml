@page "view/{id:min(1)}"
@model tuseTheProgrammer.Pages.InMemoryData.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
    int enumValue = (int)Model.Employee.Department.Dept;
}

<div class="alert alert-info alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Success!</strong> <p>Employee Details</p>
</div>

<hr />
<div class="table-responsive">
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <td>Employeed Id</td>
                <th>Name</th>
                <th>Email</th>
                <th>Salary</th>
                <th>Gender</th>
                <th>Department Name</th>
                <th>Department Id</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Employee.Id.ToString()</td>
                <td>@Model.Employee.Name</td>
                <td>@Model.Employee.Email</td>
                <td>@Model.Employee.Salary.ToString("c")</td>
                <td>@Model.Employee.Gender.Sex</td>
                <td>@Model.Employee.Department.Dept</td>
                <td>@enumValue</td>
                <td>
                    <a asp-page="Index" class="btn btn-secondary">
                        Back
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
